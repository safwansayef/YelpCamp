<% include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1 </li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3 </li>
            </div>
        </div>
        <div class="col-md-9">
            <img class="img-responsive"><div class="thumbnail"><img src="<%=Camp.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/Night</h4>
                    <h4><a><%=Camp.name%></a></h4>
                    <p><%=Camp.description %> </p>
                    <p>
                        <em>Submitted By <%=Camp.author.username %></em>
                    </p>
                    <% if(currentUser && Camp.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning"href="/campgrounds/<%=Camp._id%>/edit">Edit</a>
                    <form id="delete" action="/campgrounds/<%=Camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a href= "/campgrounds/<%=Camp._id%>/comments/new" class = "btn btn-success">Add New Comment</a>
                </div>
                <hr>
                    <% Camp.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="pull-right">10 Days Ago</span>
                            <p><strong><%=comment.author.username%></strong>- <%=comment.comment%></p> 
                            <% if(currentUser && Camp.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/campgrounds/<%=Camp._id %>/comments/<%=comment._id %>/edit">Edit</a>
                               <form id="delete-comment" action="/campgrounds/<%=Camp._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% } %>
                            <% })%>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>











<% include ../partials/footer%>