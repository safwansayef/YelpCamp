<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new Campground</h1>
        <div style="width:30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                     <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                     <input type="text" class="form-control" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                     <input type="text" class="form-control" name="description" placeholder="Add a description!">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to home</a>
    </div>
</div>



