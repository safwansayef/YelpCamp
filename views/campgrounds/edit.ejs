<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%=Camp.name%> </h1>
        <div style="width:30%; margin: 0 auto;">
             <form action="/campgrounds/<%= Camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                     <input type="text" class="form-control" name="camp[name]" placeholder="Name"  value= "<%= Camp.name %>">
                </div>
                <div class="form-group">
                     <input type="text" class="form-control" name="camp[image]" placeholder="Image url"  value= "<%= Camp.image %>">
                </div>
                <div class="form-group">
                     <input type="text" class="form-control" name="camp[description]" placeholder="Add a description!" 
                     value= "<%= Camp.description %>" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to home</a>
    </div>
</div>



<% include ../partials/footer%>